<p style="color: green"><%= notice %></p>

<% content_for :title do %>
  Foodlog &dash; <%= DateTime.now %>
<%end%>

<h1>Entries</h1>

<table>
 <tr>
  <th>Meal Type</th>
  <th>Calories</th>
  <th>Proteins</th>
  <th>Carbohydrates</th>
  <th>Fats</th>
  <th colspan="3"></th>
 </tr>
</table> 

<div id="entries">
  <% @entries.each do |entry| %>
    <%= render entry %>
    <tr>
      <td><%= entry.meal_type %></td>
      <td><%= entry.calories %></td>
      <td><%= entry.proteins %></td>
      <td><%= entry.carbohydrates %></td>
      <td><%= entry.fats %></td>
      <td><%= link_to 'Show', entry %></td> 
      <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
      <td><%= link_to 'Delete', method: :delete, data: { confirm: 'Are you sure?' } %></td>

      <%= link_to "Show", entry %>
    </tr>
  <% end %>
</div>

<%= link_to "New entry", new_entry_path %>
